# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 88

[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

[*.md]
trim_trailing_whitespace = false
max_line_length = 120

[*.{toml,ini}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.dsl]
indent_style = space
indent_size = 2
